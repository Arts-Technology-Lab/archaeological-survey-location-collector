<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/news_list_entry_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:layout_margin="0dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/new_bucket_list_entry_image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/sample"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/new_bucket_list_entry_category_text_view"
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:ellipsize="middle"
            android:gravity="start"
            android:maxLines="1"
            android:padding="1dp"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/new_bucket_list_entry_maps_button"
            style="@style/Widget.AppCompat.ImageButton"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.80"
            android:adjustViewBounds="true"
            android:backgroundTint="@color/dataEntryButtonTextColor"
            android:contentDescription="@string/location_map_pin_label"
            android:cropToPadding="true"
            android:rotationX="0"
            android:scaleType="fitEnd"
            android:src="?android:attr/listChoiceIndicatorMultiple"
            android:tint="@color/dataEntryButtonBackgroundColor"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>